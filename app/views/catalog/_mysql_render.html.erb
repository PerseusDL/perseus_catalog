<%# displays mysql fields from an array of field names-%>  
  <% hash = doc.attributes %>
  <% field_list.each do |key| %>
    <% val = hash[key] %>
    <% is_lang = key =~ /lang/i %>
    <% if (val && val != "")%>
      
      <dt><%= "#{key.gsub("_", " ").capitalize}:"%></dt>
      <dd><%= render_field_value(val, is_lang) %></dd>
    <% end%>
  <% end %>